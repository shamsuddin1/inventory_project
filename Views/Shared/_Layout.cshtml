    @{
        if (@Session["User"] == null)
        {
            Response.Redirect(Url.Action("Login", "Home"));
        }
    }

    <script>
    var SessionUser = '@Session["User"].ToString()'
    var RedirectUrl = "@Url.Action("Login","Auth")"
    if (SessionUser == '') {
        window.location.href = RedirectUrl;
    }

